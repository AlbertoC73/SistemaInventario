@model SistemaInventario.Modelos.ViewModels.EmpleadoVM
@using SistemaInventario.Utilidades
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Crear Empleado Nuevo";
}

<form method="post" enctype="multipart/form-data">
    @if(Model.Empleado.Id != 0)
    {
        titulo = "Editar Empleado";
        <input asp-for="Empleado.Id" hidden/>
    }

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <h2 class="text-info">@titulo</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="container">
                    <!--Campo Apellido Paterno-->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Apellido Paterno</label>
                            <input asp-for="Empleado.ApellidoPaterno" class="form-control"/>
                            <span asp-validation-for="Empleado.ApellidoPaterno" class="text-danger"></span>
                        </div>
                    </div>
                    <!--Campo Apellido Materno-->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Apellido Materno</label>
                            <input asp-for="Empleado.ApellidoMaterno" class="form-control" />
                            <span asp-validation-for="Empleado.ApellidoMaterno" class="text-danger"></span>
                        </div>
                    </div>
                    <!--Campo Nombre-->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Nombre</label>
                            <input asp-for="Empleado.Nombre" class="form-control" />
                            <span asp-validation-for="Empleado.Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <!--Campo Direccion-->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Direccion</label>
                            <input asp-for="Empleado.Direccion" class="form-control" />
                            <span asp-validation-for="Empleado.Direccion" class="text-danger"></span>
                        </div>
                    </div>
                    <!--Campo Telefono-->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Telefono</label>
                            <input asp-for="Empleado.Telefono" class="form-control" />
                            <span asp-validation-for="Empleado.Telefono" class="text-danger"></span>
                        </div>
                    </div>
                    <!--Lista Area-->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Area</label>
                            <select asp-for="Empleado.LugarId" asp-items="@Model.LugarLista" class="form-select">
                                <option disabled selected>--Seleccione un Area--</option>
                            </select>
                            <span asp-validation-for="Empleado.LugarId" class="text-danger"></span>
                        </div>
                    </div>
                    <!--Lista Puesto-->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Puesto</label>
                            <select asp-for="Empleado.PuestoId" asp-items="@Model.PuestoLista" class="form-select">
                                <option disabled selected>--Seleccione una Marca--</option>
                            </select>
                            <span asp-validation-for="Empleado.PuestoId" class="text-danger"></span>
                        </div>
                    </div>
                    <!--sigamos con los botones-->
                    <br />
                    <div class="d-grid gap-2 d-md-block">
                        @if(Model.Empleado.Id != 0)
                        {
                            <partial name="_botonesActualizarYRegresar" model="Model.Empleado.Id"/>
                        }
                        else
                        {
                            <button type="submit" onclick="return validarImagen()" class="btn btn-primary">
                                <i class="bi bi-plus-square-fill"></i>
                                Crear
                            </button>
                            <a asp-action="Index" class="btn btn-success">
                                <i class="bi bi-arrow-return-left"></i>
                                Regresar
                            </a>
                        }
                    </div>

                </div>
            </div>


        </div>

    </div>

</form>


